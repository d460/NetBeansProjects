<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name= "hibernate.Contacto" table = "CONTACTOS">
        <id name ="id" column = "ID">
            <generator class = "identity" />
        </id> 
        <properties name = "nombre" type = "string" column = "NOMBRE" />
        <properties name = "email" type = "string" column = "EMAIL"/>
        <properties name = "telefono" type = "string" column = "TELEFONO" />
    </class>
</hibernate-mapping>